@model CMS.Models.ViewModel.EmployeeViewModel
@{
    ViewData["Title"] = "Speakers List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container cus-border rounded bg-light">
    <div class="row pt-2 justify-content-center">
        <h3>Speakers List</h3>
    </div>
    <hr class="w-75" />
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Sr No.</th>
                <th>Speaker Name</th>
                <th>Conference Name</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script>
        jQuery.noConflict()(function ($) {
            $(document).ready(function () {
                loadDataTable();
            })
        })

        var dataTable;

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": {
                    "url": "/User/ConfAttendee/GetAllSp",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "id", "width": "15%" },
                    { "data": "name", "width": "40%" },
                    { "data": "conference.name", "width": "45%" }
                ],
                "language": {
                    "emptyTable": "No Record Found!"
                },
                "width": "100%"
            })
        }
    </script>
    <style>
        .cus-border {
            border: 2px solid #004481;
        }

        hr {
            border-color: black;
        }
    </style>
}