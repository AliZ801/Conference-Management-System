@{
    ViewData["Title"] = "Sessions List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rounded bg-light" style="border:2px solid #004481">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-2">Sessions List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddSession" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i> &nbsp; New Session
            </a>
        </div>
        <hr class="w-75" style="border-color:black" />
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered pl-1 pr-1" style="width:100%">
        <thead>
            <tr>
                <th>Session ID</th>
                <th>Session Title</th>
                <th>Conference Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 
    <script src="~/js/sessions.js"></script>
}