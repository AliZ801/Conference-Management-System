@{
    ViewData["Title"] = "Tags List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rounded" style="border:2px solid #004481">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-2">Tag's List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddTag" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i> &nbsp; New Tag
            </a>
        </div>
        <hr class="w-75" style="border-color:black" />
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered pl-1 pr-1" style="width:100%">
        <thead>
            <tr>
                <th>Tag ID</th>
                <th>Tag Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 
    <script src="~/js/tags.js"></script>
}