@model CMS.Models.ViewModel.CMSViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Session Speaker";

    if (Model.SSpeaker.Id != 0)
    {
        ViewData["Title"] = "Update Session Speaker";
    }
    else
    {
        ViewData["Title"] = "Add New Session Speaker";
    }
}

<div class="container">
    <div class="col-6 m-0 m-auto cus-border bg-light">
        <form method="post" asp-action="AddSSpeaker" class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.SSpeaker.Id != 0)
            {
                <input type="hidden" asp-for="@Model.SSpeaker.Id" />
                title = "Update Session Speaker";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <label>Session Title</label>
                @Html.DropDownListFor(i => i.SSpeaker.SessionId, Model.SessionsList, "Select Session Title", new { @class = "form-control", @style = "border-color:#0094ff" })
            </div>

            <div class="row form-group">
                <label>Speaker Name</label>
                @Html.DropDownListFor(i => i.SSpeaker.SpeakerId, Model.SpeakersList, "Select Speaker Name", new { @class = "form-control", @style = "border-color:#0094ff" })
            </div>

            <div class="row form-group pb-2">

                @if (Model.SSpeaker.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.SSpeaker.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }

            </div>

        </form>
    </div>
</div>

@section Scripts{
    <style>
        .cus-border {
            border: 2px solid #004481;
            border-top-left-radius: 50px;
            border-top-right-radius: 15px;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 50px;
        }

        label {
            font-weight: 500;
        }

        hr {
            border-color: black;
        }
    </style>
}