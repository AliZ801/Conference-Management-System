@model CMS.Models.ViewModel.CMSViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Attendee";

    if(Model.Attendees.Id != 0)
    {
        ViewData["Title"] = "Update Attendee";
    }
    else
    {
        ViewData["Title"] = "Add New Attendee";
    }
}

<div class="container">
    <div class="col-6 m-0 m-auto cus-border bg-light">
        <form method="post" asp-action="AddAttendee" class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if(Model.Attendees.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Attendees.Id" />
                title = "Update Attendee";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <label asp-for="@Model.Attendees.FName"></label>
                <input asp-for="@Model.Attendees.FName" class="form-control" />
                <span asp-validation-for="@Model.Attendees.FName" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <label asp-for="@Model.Attendees.Email"></label>
                <input asp-for="@Model.Attendees.Email" class="form-control" />
                <span asp-validation-for="@Model.Attendees.Email" class="text-danger"></span>
            </div>

            <div class="row form-group pb-2">

                @if(Model.Attendees.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.Attendees.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }

            </div>

        </form>
    </div>
</div>

@section Scripts{ 
<style>
    .cus-border{
        border: 2px solid #004481;
        border-top-left-radius: 50px;
        border-top-right-radius: 15px;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 50px;
    }
    label{
        font-weight: 500;
    }
    input[type=text] {
        border-color: #0094ff;
    }
    input[type=email] {
        border-color: #0094ff;
    }
    hr {
        border-color: black;
    }
</style>
}