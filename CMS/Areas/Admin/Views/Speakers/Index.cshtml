@{
    ViewData["Title"] = "Speakers List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border">
    <div class="row p-1">
        <div class="col-6">
            <h3>Speakers List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddSpeaker" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i> &nbsp; New Speakers
            </a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Speaker ID</th>
                <th>Speaker Name</th>
                <th>Conference Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 
    <script src="~/js/speakers.js"></script>
}