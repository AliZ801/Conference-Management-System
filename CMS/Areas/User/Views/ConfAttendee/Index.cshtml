@model CMS.Models.ViewModel.EmployeeViewModel
@{
    ViewData["Title"] = "Conference Attendees List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-2 justify-content-center">
        <h3>Attendees List</h3>
    </div>
    <br />
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Sr No.</th>
                <th>Conference Name</th>
                <th>Attendee Full Name</th>
            </tr>
        </thead>
        <tbody>
            
            @if(Model.ConfAttendees.Count() > 0)
            {
                @foreach(var item in Model.ConfAttendees)
                {
                    <tr>
                        <td>@Html.DisplayFor(i => item.Id)</td>
                        <td>@Html.DisplayFor(i => item.Conference.Name)</td>
                        <td>@Html.DisplayFor(i => item.Attendees.FName)</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>